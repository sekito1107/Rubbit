<div class="flex flex-col h-full">
  <%# Header Component %>
  <%= render Layout::HeaderComponent.new %>

  <%# Main Content Area (Editor + Terminal + Sidebar) %>
  <div class="flex-1 flex min-h-0">
    <%# Left Panel: Editor & Terminal %>
    <div class="flex-1 flex flex-col min-w-0">
      <%# Editor Area %>
      <div class="flex-1 relative bg-[#0D1117]">
        <div class="absolute inset-0 p-4 text-slate-400 font-mono text-sm">
          <!-- Editor Placeholder -->
          <div class="flex items-center justify-between mb-2">
            <span class="text-xs text-slate-500">main.rb</span>
            <span class="text-xs text-slate-600">Ready</span>
          </div>
          <div class="space-y-1">
            <div class="flex"><span class="w-6 text-slate-600 text-right mr-3 select-none">1</span><span class="text-slate-500"># Welcome to RubPad!</span></div>
            <div class="flex"><span class="w-6 text-slate-600 text-right mr-3 select-none">2</span><span class="text-slate-500"># Type code here and see Rurema links appear on the right.</span></div>
            <div class="flex"><span class="w-6 text-slate-600 text-right mr-3 select-none">3</span></div>
            <div class="flex"><span class="w-6 text-slate-600 text-right mr-3 select-none">4</span><span class="text-purple-400">names</span> <span class="text-white">=</span> [<span class="text-green-400">'Ruby'</span>, <span class="text-green-400">'Python'</span>, <span class="text-green-400">'JavaScript'</span>]</div>
          </div>
        </div>
      </div>

      <%# Terminal Area %>
      <div class="h-1/3 min-h-[150px] border-t border-white/5 bg-[#0D1117] flex flex-col">
        <div class="flex items-center justify-between px-4 py-1 bg-white/5 border-b border-white/5">
          <span class="text-xs font-medium text-slate-400">Terminal / Output</span>
          <button class="text-xs text-slate-500 hover:text-slate-300">Clear</button>
        </div>
        <div class="flex-1 p-4 font-mono text-sm text-slate-400 overflow-auto">
          <div class="text-slate-500">// Ruby WASM initializing...</div>
        </div>
      </div>
    </div>

    <%# Right Panel: Sidebar (Rurema Context) %>
    <aside class="w-80 border-l border-white/5 bg-[#0D1117] flex flex-col shrink-0">
      <div class="h-10 border-b border-white/5 flex items-center justify-between px-4 bg-white/5">
        <div class="flex items-center gap-2">
          <%= inline_svg_tag "icons/ruby.svg", class: "w-3 h-3 grayscale opacity-50" %>
          <span class="text-xs font-bold text-slate-300">Rurema Context</span>
        </div>
        <span class="text-[10px] text-slate-600 tracking-wider font-medium">LIVE</span>
      </div>
      
      <div class="flex-1 p-3 overflow-y-auto space-y-3">
        <%# Mock Rurema Items %>
        <% [".select", ".include?", ".map", ".each"].each do |method| %>
          <div class="bg-[#161b22] border border-white/5 rounded-md overflow-hidden hover:border-white/10 transition-colors">
            <div class="px-3 py-2 bg-white/5 border-b border-white/5 flex items-center gap-2">
              <span class="text-blue-400 text-xs font-mono">&lt;&gt;</span>
              <span class="text-slate-200 text-sm font-semibold font-mono"><%= method %></span>
            </div>
            <div class="p-3 space-y-2">
              <div class="text-xs text-slate-400 font-mono">Array<span class="text-red-400">#<%= method.delete('.') %></span></div>
              <div class="text-xs text-slate-400 font-mono">Enumerable<span class="text-red-400">#<%= method.delete('.') %></span></div>
            </div>
          </div>
        <% end %>
      </div>
    </aside>
  </div>
</div>
